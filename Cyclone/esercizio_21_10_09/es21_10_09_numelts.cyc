#include<stdio.h>

int mstrlen(char *@numelts(4) s){
  char *@numelts(4) p = s;
  int i;
  for(i = 0; *p && i < numelts(s); i++ ){ 
     p++;  
  }
  return i;
}

int main(){
  
   char a[6] @zeroterm = "pippo";
  
   printf("s:%s l:%d",a,mstrlen(a));    

